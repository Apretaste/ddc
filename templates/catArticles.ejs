<div class="row">
    <div class="col col-s12">
        <h1>Categoria: <%= category %>}</h1>

        <% if (articles.length == 0) { %>
            <p>Lo siento, a&uacute;n no tenemos historias para esta categor&iacute;a :'-(</p>
        <% } %>
    </div>
</div>

<% articles.forEach(function(article){ %>
<div class="row">
    <div class="col col-s12">
        <h2><a href="#!" onclick="apretaste.send({command:'DIARIODECUBA HISTORIA', data:{link: article.link}})"><%= article.title %></a></h2>
        <%= article.description.substr(0,200) %>...<br/>
        <small>
            <font color="gray">
                <% article.author %>, <% article.pubDate %>
            </font>
        </small>
    </div>
<% }); %>
</div>

<div class="row">
    <div class="col s6 m6">
        <button class="btn btn-default" onclick="apretaste.send({command: 'DIARIODECUBA'});">M&aacute;s noticias</button>
    </div>
</div>
