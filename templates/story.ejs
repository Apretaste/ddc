<div class="col s12 article">
    <h3><%= title %></h3>
    <p class="article-info grey-ddc"><%= author %> | <%= artLocation %></p>
    <p class="article-description"><%= description %></p>
    <% if(image != ""){ %>
        <div class="center-align">
            <img src="{{APP_IMAGE_PATH}}<%= image %>" alt="articleImg" class="responsive-img">
            <figcaption><%= imageCaption %></figcaption>
        </div>
    <% } %>

    <section class="grey-ddc" style="font-size: 16px">
        <% content.split("\\n\\n").forEach(function(paragraph){ %>
            <p><%= paragraph %></p>
        <% }) %>
    </section>
</div>