
<div class="row">
	<div class="col s12" id="article">
		<h2><%=title%></h2>
		<%if(img!=""){%>
			  <div class="center-align">	
				  	<img class="responsive-img" src="{{APP_IMAGE_PATH}}/<%=img%>" alt="<%=imgAlt%>">
				</div>
		<%}%>
		<blockquote>
			<p><i><%=intro%></i></p>
	  	</blockquote>
		<section>
			<% content.forEach(paragraph=>{%>
			<p style="text-align:left;"><%=paragraph%></p>
		<%});%>
		</section>
		
		<div class="fixed-action-btn">
			<a class="btn-floating btn-large waves-effect waves-light green" href="#!" onclick="apretaste.send(<%=backButton%>)"><i class="material-icons">arrow_back</i></a>
		</div>
	</div>
</div>
