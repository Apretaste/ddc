<div class="row">
	<div class="col s12">
		<ul class="collection">
			<% for(var i=0; i<articles.length; i++) { %>
				<li class="collection-item">
					<a href="#!" onclick="apretaste.send({
							command: 'DDC HISTORIA',
							data:{
								query: articles[<%= i %>].link,
							    title: articles[<%= i %>].title
							}
					})">
						<h6><%= articles[i].title %></h6>
					</a>

					<% if(articles[i].description.length != 0){ %>
						<p><%= articles[i].description %></p>
					<%}%>

					<small>
						<%= articles[i].pubDate %>
						<% if(articles[i].author!=""){ %>
							&bull; <i><%= articles[i].author %></i>
						<% } %>

						<br>

						<% for(var j=0; j<articles[i].category.length; j++) { %>
							<div class="chip small">
								<a href="#!" class="grey-text text-darken-3" onclick="apretaste.send({'command':'DDC CATEGORIA','data':{'query': '<%= articles[i].category[j].link %>', 'caption':'<%= articles[i].category[j].caption %>'}})"><%= articles[i].category[j].caption %></a>
							</div>
						<% } %>
					</small>
				</li>
			<% } %>
		</ul>
	</div>

	<div class="fixed-action-btn">
		<a href="#searchModal" class="btn-floating btn-large waves-effect waves-light modal-trigger">
			<i class="large material-icons">search</i>
		</a>
	</div>

	<div id="searchModal" class="modal bottom-sheet">
		<div class="modal-content">
			<div class="input-field">
				<textarea id="query" class="materialize-textarea"></textarea>
				<label for="note">Buscar</label>
			</div>
		</div>
		<div class="modal-footer">
			<a href="#!" class="modal-close waves-effect waves-light btn-flat">Cerrar</a>
			<a href="#!" onclick="sendSearch()" class="modal-close waves-effect waves-green btn-flat">Buscar</a>
		</div>
	</div>
</div>
